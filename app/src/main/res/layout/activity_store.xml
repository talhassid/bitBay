<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_grey_700"
    tools:context=".StoreActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/category_1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#fff"
                android:drawableRight="@drawable/newin"
                android:text="New In"
                android:textColor="#000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/category_2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:drawableRight="@drawable/fashion"
                android:text="Fashion"
                android:textColor="#000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/category_3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:drawableRight="@drawable/elc"
                android:text="Electronics"
                android:textColor="#000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/category_4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:drawableRight="@drawable/toys"
                android:text="Toys"
                android:textColor="#000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/category_5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:drawableRight="@drawable/sport"
                android:text="Sporting Goods"
                android:textColor="#000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/category_6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:drawableRight="@drawable/home"
                android:text="Home and Garden"
                android:textColor="#000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/category_7"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:drawableRight="@drawable/music"
                android:text="Music"
                android:textColor="#000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/category_8"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:text="Business and Industrial"
                android:textColor="#000"
                android:textSize="15sp" />

            <Button
                android:id="@+id/category_9"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#fff"
                android:drawableRight="@drawable/motors"
                android:text="Motors"
                android:textColor="#000"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/search_edit_frame"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Enter search key" />

            <ImageButton
                android:id="@+id/search_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:maxHeight="40dp"
                android:maxWidth="40dp"
                android:padding="5dp"
                android:src="@drawable/search"
                android:text="Button" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>