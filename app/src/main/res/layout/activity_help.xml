<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/help_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_grey_700"
    tools:context=".HelpActivity">

    <FrameLayout
        android:id="@+id/help_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="80dp"
            android:textSize="20dp"
            android:text="More details about \norders, payments, delivery and returns \n\nUp Here"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:src="@drawable/ic_info" />
    </FrameLayout>
    <FrameLayout
        android:id="@+id/help_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_help_navigation"
        android:layout_alignParentTop="true">
    </FrameLayout>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_help_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:itemBackground="@color/blue_grey_500"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        android:layout_alignParentTop="true"
        app:menu="@menu/help_menu" >
    </android.support.design.widget.BottomNavigationView>



</RelativeLayout>

